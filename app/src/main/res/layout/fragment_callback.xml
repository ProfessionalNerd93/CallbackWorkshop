<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/toast_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Run Toast Method From Activity"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/change_textview_callback_button"
        app:layout_constraintEnd_toEndOf="@+id/change_textview_callback_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/change_textview_callback_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_textview_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:text="Change Activity TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/change_background_callback_button"
        app:layout_constraintEnd_toEndOf="@+id/change_background_callback_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/change_background_callback_button"
        app:layout_constraintTop_toBottomOf="@+id/toast_callback_button" />

    <Button
        android:id="@+id/change_background_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:text="Change Activity Background"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/remove_fragment_callback_button"
        app:layout_constraintEnd_toEndOf="@+id/remove_fragment_callback_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/remove_fragment_callback_button"
        app:layout_constraintTop_toBottomOf="@+id/change_textview_callback_button" />

    <Button
        android:id="@+id/remove_fragment_callback_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="Remove Fragment From Activity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_background_callback_button" />
</android.support.constraint.ConstraintLayout>